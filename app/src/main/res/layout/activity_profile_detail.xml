<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ProfileDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/ivUserImage"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:background="@drawable/avtarimage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/back"
                android:id="@+id/iv_back"
                android:layout_height="@dimen/_25sdp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:background="@drawable/share"
                    android:layout_height="wrap_content"/>
                <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="@string/share"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <com.firstfaceme.firstface.controller.CustomViews.MyTextViewBold
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:text="Tailor Swift, 22"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:text="@string/lorem"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_8sdp"
                        android:background="@color/green"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_8sdp"/>
                    <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                        android:id="@+id/tvOnline"
                        android:layout_width="wrap_content"
                        android:text="Online"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_8sdp"
                        android:background="@drawable/distance"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_8sdp"/>
                    <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:text="25km"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                android:layout_width="wrap_content"
                android:text="Fasion Designer"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:id="@+id/iv_reject"
                    android:background="@drawable/reject"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:id="@+id/iv_accept"
                    android:background="@drawable/accept"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>