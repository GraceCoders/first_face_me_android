<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    app:cardCornerRadius="@dimen/_25sdp"
    android:elevation="@dimen/_40sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/boarder_round_white_card"
            android:layout_height="wrap_content">
            <com.firstfaceme.firstface.controller.CustomViews.MyTextViewBold
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:text="Tailor Swift, 22"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:text="Lorem ipsum dolor sit amet"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                 android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_8sdp"
                    android:background="@color/green"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="@dimen/_8sdp"/>
                <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                    android:id="@+id/tvOnline"
                    android:layout_width="wrap_content"
                    android:text="Online"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_8sdp"
                        android:background="@drawable/distance"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="@dimen/_8sdp"/>
                    <com.firstfaceme.firstface.controller.CustomViews.MyTextViewRegular
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:text="25km"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
